alias gohome="cd ~"
alias goxdisk="cd /gsfs1/xdisk/scottdaniel/"
alias l="ls -alh --time-style=+"%Y-%m-%d-%T""
alias gotb="cd /gsfs1/rsgrps/zarnescu"
alias gotrap="cd /gsfs1/rsgrps/zarnescu/TRAP"
alias gohl="cd /gsfs1/rsgrps/bhurwitz/scottdaniel"
alias moduel="module"

